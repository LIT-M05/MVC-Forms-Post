@using WebApplication10.Models
@model SearchResultsViewModel

<!DOCTYPE html>

<html>
<head>
    <title>title</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
<div class="container" style="margin-top: 40px;">
    <div class="row">
        <form action="/northwind/searchonepage" class="form-inline">
            <div class="col">
                <input value="@Model.MinStock" type="text" name="minStock" class="form-control" placeholder="Min Stock" />
            </div>
            <div class="col">
                <input value="@Model.MaxStock" type="text" name="maxStock" class="form-control" placeholder="Max Stock" />
            </div>
            <div class="col">
                <button class="btn btn-success">Search Products</button>
            </div>
        </form>
        <br/>
        @if (Model.Products != null)
        {
            <h2>Products between @Model.MinStock and @Model.MaxStock in stock</h2>
            <table class="table table-bordered table-hover tabled-striped">
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Stock</th>
                    <th>Price</th>
                </tr>
                @foreach (Product product in Model.Products)
                {
                    <tr>
                        <td>@product.Id</td>
                        <td>@product.Name</td>
                        <td>@product.QuantityInStock</td>
                        <td>@product.UnitPrice.ToString("C")</td>
                    </tr>
                }
            </table>
        }
    </div>
</div>
</body>
</html>