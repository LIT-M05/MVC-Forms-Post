@using WebApplication10.Models
@model Person

<!DOCTYPE html>

<html>
<head>
    <title>title</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container" style="margin-top: 40px;">
        <div class="row">
            <form class="form" action="/people/update" method="POST">
                <input value="@Model.FirstName" type="text" class="form-control" name="firstName" placeholder="First Name" />
                <br />
                <input value="@Model.LastName" type="text" class="form-control" name="lastName" placeholder="Last Name" />
                <br />
                <input value="@Model.Age" type="text" class="form-control" name="age" placeholder="Age" />
                <br />
                <input type="hidden" name="id" value="@Model.Id"/>
                <button class="btn btn-danger">Update</button>
            </form>
        </div>
    </div>
</body>
</html>